<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:radius="30dp"/>

    <solid android:color="#FEFFFD" />

    <!-- Đường viền (nếu cần) -->
    <stroke
        android:width="2dp"
        android:color="#C8E1FA" />

    <!-- Padding (nếu cần) -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"/>

    <!-- Kích thước mặc định (tùy chỉnh theo nhu cầu) -->
    <size
        android:width="100dp"
        android:height="100dp" />
</shape>