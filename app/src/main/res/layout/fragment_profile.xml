<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CFF4FF"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Hồ sơ"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvtUser"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/avt_profile_hh"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_image_with_border"
            />
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="DIỆP VĂN HIẾU"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="350dp"
        />
    <LinearLayout
        android:id="@+id/page_Thongtin"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_icon_border"
            android:backgroundTint="#03A9F4"
            android:src="@drawable/ic_person_outline_hh"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_keyboard_arrow_right_hh"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="470dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_icon_border"
            android:backgroundTint="#FF9800"
            android:src="@drawable/ic_settings_hh"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_keyboard_arrow_right_hh"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clickClose"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="540dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_icon_border"
            android:backgroundTint="#E05656"
            android:src="@drawable/ic_close_hh"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_keyboard_arrow_right_hh"

            />
    </LinearLayout>


</FrameLayout>